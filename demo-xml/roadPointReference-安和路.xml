<?xml version="1.0" encoding="UTF-8"?>
<ro:RoadPointReference xmlns:gml="http://www.opengis.net/gml/3.2" xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:ro="http://www.motc.gov.tw/RoadNetwork"
    xmlns:net="http://www.motc.gov.tw/TransportNetwork" xmlns:xlink="http://www.w3.org/1999/xlink"    
    xmlns:base="http://www.motc.gov.tw/BaseTypes" xmlns="http://www.motc.gov.tw/RoadEvent"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.motc.gov.tw/RoadEvent ../XSD/motcRoadEvent.xsd 
                        http://www.motc.gov.tw/RoadNetwork ../XSD/motcRoadNetwork.xsd"
    gml:id="demo" >    
    <!--參照的線形為何-->
    <net:element>  
        <ro:RoadLink gml:id="link">
            <!-- 路名，非必要 -->
            <net:referedProperty>
                <ro:RoadIdentity gml:id="B2"> 
                    <ro:roadName>安和路</ro:roadName>        
                </ro:RoadIdentity>
            </net:referedProperty>
            <!--線段編號，必要-->
            <ro:roadLinkID>B-4U-050526</ro:roadLinkID>
        </ro:RoadLink>
    </net:element>
    <!--起始路口是哪一個節點，非必要-->
    <!--此節點亦可用交叉路口之範例取代，交叉路口之表示方式請見roadNode 章節-->
    <net:fromNode>
        <ro:RoadNode gml:id="fromNode">
            <ro:roadNodeID>S6EX9LKJ1</ro:roadNodeID>
        </ro:RoadNode>
    </net:fromNode>
    <!--方向性，必要-->
    <net:direction>inOppositeDirection</net:direction><!--與數化方向反向-->
    <!--橫向偏移距離，非必要-->
    <net:offset uom="m">5</net:offset>  
    <!--縱向偏移距離，非必要-->
    <net:atPosition uom="m">40</net:atPosition>
    <!--坐標，非必要-->
    <ro:atPoint>
        <gml:Point gml:id="point" srsName="EPSG:3826">
            <gml:pos>211969.898 2675435.235</gml:pos>
        </gml:Point>
    </ro:atPoint>
    <!--地址，非必要-->
    <ro:atAddress>
        <base:Address>
            <base:inTown>
                <base:Town>
                    <base:inCounty>
                        <base:County>
                            <base:countyName>臺中市</base:countyName>
                            <base:countyID>B</base:countyID>
                        </base:County>
                    </base:inCounty>
                    <base:townName>西屯區</base:townName>
                    <base:townID>6600006</base:townID>
                </base:Town>
            </base:inTown>
            <base:roadName>安和路</base:roadName>
            <base:doorNumber>25</base:doorNumber>
        </base:Address>
    </ro:atAddress>
</ro:RoadPointReference>
