<?xml version="1.0" encoding="UTF-8"?>
<ro:RoadLinearReference xmlns:gml="http://www.opengis.net/gml/3.2" xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:ro="http://www.motc.gov.tw/RoadNetwork"
    xmlns:net="http://www.motc.gov.tw/TransportNetwork" xmlns:xlink="http://www.w3.org/1999/xlink"    
    xmlns:base="http://www.motc.gov.tw/BaseTypes" xmlns="http://www.motc.gov.tw/RoadEvent"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.motc.gov.tw/RoadEvent ../XSD/motcRoadEvent.xsd 
                        http://www.motc.gov.tw/RoadNetwork ../XSD/motcRoadNetwork.xsd"
    gml:id="demo" >    
    <!--參照的線形為何，此線形可小至link，大至road-->
    <net:element>   
        <!--線形範例1：Road-->
        <ro:Road gml:id="road1">
            <net:referedProperty>
                <ro:RoadIdentity gml:id="B2"> 
                    <ro:roadName>安和路</ro:roadName>        
                </ro:RoadIdentity>
            </net:referedProperty>
            <net:link></net:link>            
            <ro:roadID>road1</ro:roadID>
        </ro:Road>     
        <!--線形範例2：RoadLink-->
        <!--<ro:RoadLink gml:id="link">
            <!-\- 路名，非必要 -\->
            <net:referedProperty>
                <ro:RoadIdentity gml:id="B2"> 
                    <ro:roadName>安和路</ro:roadName>        
                </ro:RoadIdentity>
            </net:referedProperty>
            <!-\-線段編號，必要-\->
            <ro:roadLinkID>B-4U-050526</ro:roadLinkID>
        </ro:RoadLink>-->        
    </net:element>
    <!--起始路口是哪一個節點，非必要-->
    <net:fromNode>
        <ro:RoadNode gml:id="fromNode">
            <ro:roadNodeID>S6EX9LKJ1</ro:roadNodeID>
        </ro:RoadNode>
    </net:fromNode>    
    <!--方向性，必要-->
    <net:direction>inOppositeDirection</net:direction><!--與數化方向反向-->
    <!--線型參照結束的相對位置-->
    <net:toPosition uom="m">100</net:toPosition>
    <!--橫向偏移距離，非必要-->
    <net:offset uom="m">5</net:offset>    
    <!--線型參照開始的相對位置，非必要-->
    <net:fromPosition uom="m">40</net:fromPosition>    
</ro:RoadLinearReference>